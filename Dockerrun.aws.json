{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "flask-app-template",
      "host": {
        "sourcePath": "/var/app/current/app"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "appsvr",
      "image": "thehackerati/flask-app-template",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 5000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "flask-app-template",
          "containerPath": "/var/opt/app",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "thehackerati/nginx-reverse-proxy",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8080
        }
      ],
      "links": [
        "appsvr"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}
